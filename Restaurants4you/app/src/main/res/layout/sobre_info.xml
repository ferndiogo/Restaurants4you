<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <TextView
        android:id="@+id/txtCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="Engenharia Informática"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtUC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="Desenvolvimento de Aplicações Móveis"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtAno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="2022/2023"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFernando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/fernando"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtNomeFernando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fernando Fuzeiro"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNumFernando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nº 22111"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgVasco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/vasco"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:layout_margin="10dp">

            <TextView
                android:id="@+id/txtNomeVasco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Vasco Araújo"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNumVasco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nº 23055"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>