<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtCurso"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="@string/curso"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtUC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/uc"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtUC2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/ipt"
        android:textAlignment="center"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/txtAno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/ano"
        android:textAlignment="center"
        android:textSize="16sp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgFernando"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/fernando"
            android:contentDescription="@string/imagem" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeFernando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fernando_fuzeiro"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNumFernando"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/n_22111"
                android:textAlignment="center" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgVasco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:background="@drawable/vasco"
            android:contentDescription="@string/imagem" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtNomeVasco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/vasco_araujo"
                android:textAlignment="center"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/txtNumVasco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/n_23055"
                android:textAlignment="center" />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>